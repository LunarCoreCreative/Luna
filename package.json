{
  "name": "luna",
  "private": true,
  "version": "1.0.0",
  "description": "Luna AI Assistant",
  "author": "Lunar Core Creative",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite --host localhost",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:start": "electron .",
    "dev:desktop": "concurrently -n \"VITE,ELECTRON\" -c \"blue,green\" \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron:start\"",
    "convert-icon": "node scripts/convert-icon.cjs",
    "combine-icons": "powershell -ExecutionPolicy Bypass -File scripts/combine-icons.ps1",
    "combine-icons-node": "node scripts/combine-icons.cjs",
    "dist:desktop": "vite build && electron-builder",
    "backend": "cd server && python app.py",
    "backend:dev": "cd server && python app.py",
    "kill-ports": "powershell -ExecutionPolicy Bypass -File kill-ports.ps1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.7.3",
    "express": "^5.2.1",
    "firebase": "^12.8.0",
    "framer-motion": "^12.27.0",
    "i18next": "^25.7.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.3",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.12.0",
    "react-syntax-highlighter": "^16.1.0",
    "recharts": "^3.6.0",
    "remark-gfm": "^4.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "ico-to-png": "^0.2.2",
    "jimp": "^1.6.0",
    "postcss": "^8.5.6",
    "rollup": "^4.55.2",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "to-ico": "^1.1.5",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.lunarcore.luna",
    "productName": "Luna",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*",
      "resource/**/*",
      "index.html"
    ],
    "extraResources": [
      {
        "from": "resource",
        "to": "resource",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resource/logo.ico",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "executableName": "Luna",
      "forceCodeSigning": false,
      "signAndEditExecutable": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "LunarCoreCreative",
      "repo": "Luna",
      "releaseType": "release"
    }
  }
}
