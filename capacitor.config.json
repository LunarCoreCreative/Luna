{
  "appId": "com.lunarcorec.luna",
  "appName": "Luna",
  "webDir": "dist",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "StatusBar": {
      "style": "DARK",
      "backgroundColor": "#0d1117"
    },
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#0d1117",
      "showSpinner": false,
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "Keyboard": {
      "resize": "body",
      "resizeOnFullScreen": true
    }
  },
  "android": {
    "backgroundColor": "#0d1117",
    "allowMixedContent": true
  }
}